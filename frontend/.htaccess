RewriteEngine On
# Handle requests for files that actually exist
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Handle backend API requests
RewriteRule ^api(/.*)?$ /backend/$1 [P,L]

# Handle frontend routes by rewriting to index.html for client-side routing
RewriteRule ^ index.html [L] 